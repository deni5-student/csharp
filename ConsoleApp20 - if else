ConsoleApp20 - if else

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp20
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Du er i en Console.ReadLine som laver string");
            Console.WriteLine("indtast et tal: ");
            if (int.TryParse(Console.ReadLine(), out int age)) ;
            else
            {
                while (true)
                {
                    Console.WriteLine("Du skal indtaste et nummer: ");
                    if (int.TryParse(Console.ReadLine(), out age))
                    {
                        break;
                    }
                }
            }
            Console.WriteLine("Dette tal er lavet om fra string til int");
            Console.WriteLine("Med en if else funktion");
            Console.WriteLine(age);
        }
    }
}
